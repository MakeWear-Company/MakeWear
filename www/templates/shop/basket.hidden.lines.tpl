<div class='item clearfix'>
    <div class='image'>
        <img src='{$src}' alt='' onerror='this.src="/templates/shop/image/nophotosproduct.jpg"'>
    </div>
    <div class='info'>
        <p class='title'>
            {$brandName}
        </p>
        <p class='name'>{$commodityName}</p>
        <p class='cost'>Цена: <span>{$price}</span> {$cur_v}</p>
    </div>
    <div class='quantity'>
        <p>
            <span>{$commodityQuantity}</span> ед
        </p>
    </div>
    <div class='price'>
        <p>
            <span>{$sum}</span> {$cur_v}
        </p>
    </div>
</div>